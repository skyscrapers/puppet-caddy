
<%= @address %><%- unless @port.nil? -%>:<%= @port -%><%- end -%> {
  <%- @directives.each do |key, value| -%>
    <%- if value.is_a?(Hash) -%>
  <%= key -%> {
      <%- value.each do |parameter_key, parameter_value| -%>
    <%= parameter_key -%> <%= parameter_value %>
      <%- end -%>
  }
    <%- else -%>
  <%= key -%> <%= value %>
    <%- end -%>
  <%- end -%>
}
